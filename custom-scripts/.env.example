# custom-scripts/homelab-monitor/homelab-monitor.sh   #
#                                                     #
#######################################################

# Aktivierte Checks

CHECK_SYSTEM=true
CHECK_NETWORK=true
CHECK_BACKUP=true
CHECK_SECURITY=true
CHECK_UPDATES=true
CHECK_LOGS=true
CHECK_PBS=false
CHECK_NAS_BACKUP=false

# Remote Host Config
REMOTE_HOST=192.168.1.11         # IP-Adresse deines Proxmox-Hosts o.√§.
SSH_USER=root                    # SSH-Benutzer, z.‚ÄØB. root oder admin
REMOTE_SCRIPT_PATH=/root/homelab-monitor.sh

# Public IP Check URL
PUBLIC_IP_URL=https://ifconfig.me

# Name des Backup-Skripts
BACKUP_SCRIPT_NAME=ds920_backup.sh



